extends ../layout

block content
  .wrapper: .checkout.container: .content
    header
      h1 Checkout Page 
      p Make a test payment with Braintree using PayPal or a card
      h1 Your Information
      section
        label(for="name")
          span.input-label Name
          .input-wrapper.name-wrapper
          input#name(name="name", type="text" placeholder="Your Name")
        label(for="email")
          span.input-label Email
          .input-wrapper.name-wrapper
          input#email(name="email", type="text" placeholder="Your Email")
        label(for="phone")
          span.input-label Phone Number
          .input-wrapper.name-wrapper
          input#phone(name="phone" type="tel" min="10" placeholder="Your Phone Number")
      h1 Your Coderkid
      section
        label(for="coderkidname")
          span.input-label Coderkid Name
          .input-wrapper.name-wrapper
          input#coderkidname(name="coderkidname" type="text" placeholder="Your Coderkid's Name")
        label(for="age")
          span.input-label Age
          .input-wrapper.name-wrapper
          input#age(name="age" type="tel"  placeholder="Your Coderkid's Age")
        label(for="initialCourse")
          span.input-label Initial Course
          .input-wrapper.name-wrapper
          input#initialCourse(name="initialCourse" type="text" placeholder="Initial Course")
          
    form#payment-form(action="/checkouts", method="post")
      section
        .bt-drop-in-wrapper
          #bt-dropin

        label(for="amount")
          span.input-label Amount
          .input-wrapper.amount-wrapper
            input#amount(name="amount" type="tel" min="1" placeholder="Amount" value="10")

      button.button(type="submit")
        span Complete Transaction

  script(src="https://js.braintreegateway.com/v2/braintree.js")
  script.
    (function () {
    // checkout method references form#payment-form specified above and uses input//
      var checkout = new Demo({
        formID: 'payment-form'
      });

      var token = "#{clientToken}";
      braintree.setup(token, "dropin", {
        container: "bt-dropin"
      });
    })()
