doctype html
html
  head
    title Coder Kids Checkout
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="/stylesheets/app.css")
    link(rel="stylesheet", href="/stylesheets/overrides.css")
    script(type="text/javascript", src="/javascript/vendor/jquery-2.1.4.min.js")
    script(type="text/javascript", src="/javascript/vendor/jquery.lettering-0.6.1.min.js")
    script(type="text/javascript", src="/javascript/demo.js")
  body
    header.main
      .container.wide
        .content.slim
          .set
            .fill
              img.logo(src='http://static1.squarespace.com/static/56099b28e4b0e9a8dd53c467/574686d820c647ae74427c9b/574686f620c647ae74427d33/1464239866012/coderkidslogofinal1.png')  
            .fit
              a.courses(href='https://cecilia-ramirez-f520.squarespace.com/courses/') Courses
            .fit
              a.enroll(href='/') Enroll  

      .notice-wrapper
        if messages && messages.length > 0
          .show.notice.error.notice-error
            for msg in messages
              span.notice-message= msg.msg

    block content
